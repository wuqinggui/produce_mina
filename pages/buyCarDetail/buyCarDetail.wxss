/*外部容器*/
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
} 

.shop-title {
	height: 80rpx;
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.shop-title .shop-name {
	display: flex;
}
.shop-title .add {
	color: #fc9326;
}

/*整体列表*/
.carts-list {
  overflow: hidden;
	display: flex;
	flex-direction: column;
	padding-left: 40rpx;
	margin-bottom: 80rpx;
}

/*每行单元格*/
.carts-item {
	display: flex;
	flex-direction: row;
	height:100%;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:100%;
	padding: 15rpx 0;
	margin-right: 40rpx;
	position: absolute;
	top: 0;
	left: 0;
	background: white;
	z-index: 99;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(0rpx);
  transform: translateX(0rpx);
}

/*item与button的容器*/
.carts-container {
	position: relative;
	width: 100%;
	height: 160rpx;
}

/*左部图片*/
.carts-image {
	width:120rpx;
	height:120rpx;
	border-radius: 8rpx;
}


/*右部描述*/
.carts-text {
	margin-left: 20rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

/*右上部分标题*/
.carts-title {
	font-size: 28rpx;
	color: #444;
	line-height: 38rpx;
}

/*右上部分类别*/
.carts-type {
	font-size: 20rpx;
	color: #666;
	border: 1rpx solid #f0f0f0;
	border-radius: 50rpx;
	width: 60rpx;
	text-align: center;
}

/*右下部分价格与数量*/
.carts-subtitle {
	font-size: 25rpx;
	color:#999999;
	padding: 0;
	display: flex;
	flex-direction: row;
	justify-content:space-between;
}

/*价格*/
.carts-price {
	line-height: 22px;
}
.carts-price .symbol {
	color: #fc9326;
}
.carts-price .price {
	color: #fc9326;
}

/*商品加减按钮*/
/*stepper容器*/
.stepper {
	display: flex;
	border: 1rpx solid #f0f0f0;
	border-radius: 3px;
	height: 50rpx;
	margin:0 auto;
  overflow: hidden;
}


/*加号与减号*/
.stepper text {
	width: 50rpx;
	line-height: 50rpx;
	text-align: center;
	float: left;
}

/*数值*/
.stepper input {
  font-size: 26rpx;
	color: black;
	float: left;
	margin: 0 auto;
	width: 60rpx;
	height: 40rpx;
	text-align: center;
	border-left: 1rpx solid #f0f0f0;
	border-right: 1rpx solid #f0f0f0;
}

/*普通样式*/
.stepper .normal{
	color: black;
}

/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}

/*复选框样式*/
.carts-container icon {
	margin-top: 50rpx;
	margin-right: 20rpx;
}

/*底部按钮*/
.carts-footer {
	position: fixed;
	width: 100%;
	bottom: 0;
  box-shadow:0 0 4rpx rgb(238, 236, 236);
	z-index: 100;
}

.carts-footer-wrap{
	width: 100%;
	height: 80rpx;
	background: white;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.carts-footer .sum {
	display: flex;
	color: #fc9326;
	align-items: center;
}

.select-and-amount {
	display: flex;
	flex-direction: row;
	align-items: center;
}

/*复选框*/
.carts-footer icon {
	margin-left: 20rpx;
	display: block;
}

/*全选字样*/
.carts-footer text {
	font-size: 30rpx;
	margin-left: 8rpx;
	/*line-height: 10rpx;*/
	display: block;
}

/*立即结算按钮*/
.carts-footer .button {
	line-height: 60rpx;
	text-align: center;
	width: 220rpx;
	height: 60rpx;
	background-color: #F33737;
	color: white;
	font-size: 28rpx;
	border-radius: 50px;
	border: 0;
}

/*删除按钮*/
.carts-footer .delete {
	height: 80rpx;
	width: 180rpx;
	text-align: right;
	line-height: 80rpx;
	color: #fc9326;
}

/*删除按钮*/
.delete-button {
	width: 80px;
	font-size: 16px;
	height: 100%;
	line-height: 160rpx;
	border: 0;
	border-radius: 0;
	position: absolute;
	right: 0;
	top: 0;
	background-color: #fc9326 !important;
}

.goBuy-btn{
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius:36rpx;
  width: 240rpx;
  height:72rpx;
  margin: 0 auto;
  font-size:30rpx;
  color: #fff;
  padding: 0 30rpx;
  background-color: #FFA800;
}
.shop-icon{
  width: 30rpx;
  height: 30rpx;
}